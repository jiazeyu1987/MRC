import React, { useState, useEffect } from 'react';
import {
  BarChart3,
  Search,
  Calendar,
  TrendingUp,
  Users,
  Clock,
  MousePointer,
  FileSearch,
  Download,
  Filter,
  RefreshCw,
  Loader2,
  Activity,
  Eye,
  Target,
  Zap,
  AlertCircle
} from 'lucide-react';
import { useTheme } from '../../theme';
import { enhancedApi } from '../../api';
import { SearchStatistics } from '../../types/enhanced';

interface SearchAnalyticsDashboardProps {
  knowledgeBaseId: number;
  knowledgeBaseName: string;
}

const SearchAnalyticsDashboard: React.FC<SearchAnalyticsDashboardProps> = ({
  knowledgeBaseId,
  knowledgeBaseName
}) => {
  const { theme } = useTheme();
  const [loading, setLoading] = useState<boolean>(true);
  const [refreshing, setRefreshing] = useState<boolean>(false);
  const [error, setError] = useState<string | null>(null);
  const [analytics, setAnalytics] = useState<SearchStatistics | null>(null);
  const [timeRange, setTimeRange] = useState<number>(7);
  const [selectedView, setSelectedView] = useState<'overview' | 'terms' | 'performance' | 'trends'>('overview');

  // 加载搜索分析数据
  const loadSearchAnalytics = async () => {
    try {
      setError(null);
      const data = await enhancedApi.searchAnalytics.getSearchAnalytics(knowledgeBaseId, timeRange);
      setAnalytics(data);
    } catch (err) {
      setError('Failed to load search analytics');
      console.error('Search analytics loading error:', err);
    }
  };

  // 刷新数据
  const handleRefresh = async () => {
    setRefreshing(true);
    await loadSearchAnalytics();
    setRefreshing(false);
  };

  // 导出搜索分析数据
  const handleExportData = async () => {
    try {
      await enhancedApi.searchAnalytics.exportSearchAnalytics(knowledgeBaseId, 'csv', { days: timeRange });
      // 如果成功，浏览器会开始下载文件
    } catch (err) {
      console.error('Export failed:', err);
      setError('Failed to export data');
    }
  };

  // 组件加载时获取数据
  useEffect(() => => {
    if (knowledgeBaseId) {
      setLoading(true);
      loadSearchAnalytics().then(() => {}).finally(() => setLoading(false));
    }
  }, [knowledgeBaseId, timeRange]);

  if (loading) {
    return (
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <div className="text-center">
          <Loader2 className="w-8 h-8 mx-auto animate-spin text-blue-500 mb-4" />
          <p className="text-gray-500">加载搜索分析中...</p>
        </div>
      </div>
    );
  }

  if (error && !analytics) {
    return (
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <div className="text-center">
          <AlertCircle className="w-12 h-12 mx-auto text-red-500 mb-4" />
          <p className="text-red-600 mb-4">{error}</p>
          <button
            onClick={handleRefresh}
            disabled={refreshing}
            className={`px-4 py-2 text-sm font-medium text-white rounded-md ${theme.primary} ${theme.primaryHover} disabled:opacity-50 disabled:cursor-not-allowed transition-colors`}
          >
            {refreshing ? '刷新中...' : '重试'}
          </button>
        </div>
      </div>
    );
  }

  // 格式化日期
  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleString('zh-CN', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  };

  // 格式化时间
  const formatTime = (timeMs: number) => {
    if (timeMs < 1000) {
      return `${timeMs}ms`;
    } else if (timeMs < 60000) {
      return `${(timeMs / 1000).toFixed(1)}s`;
    } else {
      return `${(timeMs / 60000).toFixed(1)}m`;
    }
  };

  // 视图标签页配置
  const viewTabs = [
    { id: 'overview', label: '概览', icon: BarChart3 },
    { id: 'terms', label: '热门搜索', icon: Search },
    { id: 'performance', label: '性能分析', icon: Activity },
    { id: 'trends', label: '趋势分析', icon: TrendingUp }
  ];

  return (
    <div className="space-y-6">
      {/* 头部控制区 */}
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div className="flex items-center justify-between mb-4">
          <div>
            <h2 className="text-xl font-semibold text-gray-900 mb-2">搜索分析面板</h2>
            <p className="text-sm text-gray-600">知识库: {knowledgeBaseName}</p>
          </div>
          <div className="flex items-center space-x-3">
            {/* 时间范围选择 */}
            <select
              value={timeRange}
              onChange={(e) => setTimeRange(Number(e.target.value))}
              className={`px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none ${theme.ring} transition-colors`}
            >
              <option value={7}>最近7天</option>
              <option value={30}>最近30天</option>
              <option value={90}>最近90天</option>
              <option value={365}>最近一年</option>
            </select>

            {/* 操作按钮 */}
            <button
              onClick={handleRefresh}
              disabled={refreshing}
              className="flex items-center px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
            >
              {refreshing ? (
                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
              ) : (
                <RefreshCw className="w-4 h-4 mr-2" />
              )}
              刷新
            </button>
            <button
              onClick={handleExportData}
              className="flex items-center px-4 py-2 text-sm font-medium text-white rounded-md ${theme.primary} ${theme.primaryHover} transition-colors"
            >
              <Download className="w-4 h-4 mr-2" />
              导出数据
            </button>
          </div>
        </div>

        {/* 视图标签页 */}
        <div className="border-b border-gray-200">
          <nav className="flex -mb-px">
            {viewTabs.map((tab) => {
              const Icon = tab.icon;
              return (
                <button
                  key={tab.id}
                  onClick={() => setSelectedView(tab.id as any)}
                  className={`flex items-center px-6 py-3 text-sm font-medium border-b-2 transition-colors ${
                    selectedView === tab.id
                      ? `border-blue-500 text-blue-600 ${theme.text}`
                      : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
                  }`}
                >
                  <Icon className="w-4 h-4 mr-2" />
                  {tab.label}
                </button>
              );
            })}
          </nav>
        </div>
      </div>

      {/* 统计概览卡片 */}
      {selectedView === 'overview' && analytics && (
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">总搜索次数</p>
                <p className="text-2xl font-bold text-gray-900">{analytics.total_searches}</p>
              </div>
              <Search className="w-8 h-8 text-blue-500" />
            </div>
          </div>
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">独立用户数</p>
                <p className="text-2xl font-bold text-gray-900">{analytics.unique_users}</p>
              </div>
              <Users className="w-8 h-8 text-green-500" />
            </div>
          </div>
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">平均响应时间</p>
                <p className="text-2xl font-bold text-gray-900">{formatTime(analytics.avg_response_time_ms)}</p>
              </div>
              <Clock className="w-8 h-8 text-purple-500" />
            </div>
          </div>
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">成功率</p>
                <p className="text-2xl font-bold text-gray-900">{analytics.success_rate}%</p>
              </div>
              <Target className="w-8 h-8 text-orange-500" />
            </div>
          </div>
        </div>
      )}

      {/* 视图内容 */}
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        {selectedView === 'overview' && analytics && (
          <div className="space-y-6">
            {/* 每日搜索活动 */}
            <div>
              <h3 className="text-lg font-semibold text-gray-900 mb-4">每日搜索活动</h3>
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {analytics.daily_activity?.slice(0, 6).map((activity, index) => (
                  <div key={index} className="border border-gray-200 rounded-lg p-4">
                    <div className="flex items-center justify-between mb-3">
                      <span className="text-sm font-medium text-gray-900">{formatDate(activity.date)}</span>
                      <span className="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                        {activity.searches} 次搜索
                      </span>
                    </div>
                    <div className="space-y-2">
                      <div className="flex items-center justify-between text-sm">
                        <span className="text-gray-600">用户数</span>
                        <span className="font-medium">{activity.unique_users}</span>
                      </div>
                      <div className="flex items-center justify-between text-sm">
                        <span className="text-gray-600">平均时间</span>
                        <span className="font-medium">{formatTime(activity.avg_response_time)}</span>
                      </div>
                      <div className="flex items-center justify-between text-sm">
                        <span className="text-gray-600">成功率</span>
                        <span className="font-medium">{activity.success_rate}%</span>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            {/* 快速统计 */}
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div className="bg-gray-50 rounded-lg p-6">
                <h4 className="text-lg font-semibold text-gray-900 mb-4">搜索效率</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">点击率</span>
                    <span className="text-sm font-medium">{analytics.click_through_rate}%</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">平均结果数</span>
                    <span className="text-sm font-medium">{analytics.avg_results_count}</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">零结果搜索</span>
                    <span className="text-sm font-medium">{analytics.zero_results_rate}%</span>
                  </div>
                </div>
              </div>
              <div className="bg-gray-50 rounded-lg p-6">
                <h4 className="text-lg font-semibold text-gray-900 mb-4">用户行为</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">每日活跃用户</span>
                    <span className="text-sm font-medium">{analytics.daily_active_users}</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">会话时长</span>
                    <span className="text-sm font-medium">{analytics.avg_session_duration}分钟</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">重复搜索率</span>
                    <span className="text-sm font-medium">{analytics.repeat_search_rate}%</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        )}

        {selectedView === 'terms' && analytics && (
          <div className="space-y-6">
            <h3 className="text-lg font-semibold text-gray-900">热门搜索词</h3>
            {analytics.popular_terms?.length > 0 ? (
              <div className="space-y-3">
                {analytics.popular_terms.map((term, index) => (
                  <div key={index} className="border border-gray-200 rounded-lg p-4">
                    <div className="flex items-center justify-between">
                      <div className="flex-1">
                        <div className="flex items-center space-x-3">
                          <span className="text-lg font-bold text-gray-900">#{index + 1}</span>
                          <span className="text-lg font-medium text-gray-900">{term.term}</span>
                          <span className="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-sm font-medium">
                            {term.count} 次搜索
                          </span>
                        </div>
                        {term.clicks !== undefined && term.results !== undefined && (
                          <div className="mt-2 flex items-center space-x-4 text-sm text-gray-600">
                            <span>点击: {term.clicks}</span>
                            <span>结果: {term.results}</span>
                            <span>CTR: {term.clicks > 0 && term.results > 0 ? ((term.clicks / term.results) * 100).toFixed(1) : 0}%</span>
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div className="text-center py-8">
                <Search className="w-12 h-12 mx-auto text-gray-400 mb-4" />
                <p className="text-gray-500">暂无搜索数据</p>
              </div>
            )}
          </div>
        )}

        {selectedView === 'performance' && analytics && (
          <div className="space-y-6">
            <h3 className="text-lg font-semibold text-gray-900">性能分析</h3>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div className="space-y-4">
                <h4 className="text-md font-medium text-gray-800">响应时间分布</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                    <span className="text-sm font-medium text-green-800">快速 (&lt; 500ms)</span>
                    <span className="text-sm font-bold text-green-600">{analytics.performance?.fast_responses || 0}%</span>
                  </div>
                  <div className="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
                    <span className="text-sm font-medium text-yellow-800">正常 (500ms - 2s)</span>
                    <span className="text-sm font-bold text-yellow-600">{analytics.performance?.normal_responses || 0}%</span>
                  </div>
                  <div className="flex items-center justify-between p-3 bg-red-50 rounded-lg">
                    <span className="text-sm font-medium text-red-800">慢速 (&gt; 2s)</span>
                    <span className="text-sm font-bold text-red-600">{analytics.performance?.slow_responses || 0}%</span>
                  </div>
                </div>
              </div>

              <div className="space-y-4">
                <h4 className="text-md font-medium text-gray-800">搜索质量指标</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">平均结果数</span>
                    <span className="text-sm font-medium">{analytics.avg_results_count}</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">成功率</span>
                    <span className="text-sm font-medium">{analytics.success_rate}%</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">零结果率</span>
                    <span className="text-sm font-medium">{analytics.zero_results_rate}%</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">点击率</span>
                    <span className="text-sm font-medium">{analytics.click_through_rate}%</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        )}

        {selectedView === 'trends' && analytics && (
          <div className="space-y-6">
            <h3 className="text-lg font-semibold text-gray-900">趋势分析</h3>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div className="bg-gray-50 rounded-lg p-6">
                <h4 className="text-md font-medium text-gray-800 mb-4">搜索趋势</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">日增长率</span>
                    <div className="flex items-center">
                      {analytics.search_growth_rate > 0 ? (
                        <TrendingUp className="w-4 h-4 text-green-500 mr-1" />
                      ) : (
                        <TrendingUp className="w-4 h-4 text-red-500 mr-1 transform rotate-180" />
                      )}
                      <span className={`text-sm font-medium ${analytics.search_growth_rate > 0 ? 'text-green-600' : 'text-red-600'}`}>
                        {Math.abs(analytics.search_growth_rate)}%
                      </span>
                    </div>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">用户增长率</span>
                    <div className="flex items-center">
                      {analytics.user_growth_rate > 0 ? (
                        <TrendingUp className="w-4 h-4 text-green-500 mr-1" />
                      ) : (
                        <TrendingUp className="w-4 h-4 text-red-500 mr-1 transform rotate-180" />
                      )}
                      <span className={`text-sm font-medium ${analytics.user_growth_rate > 0 ? 'text-green-600' : 'text-red-600'}`}>
                        {Math.abs(analytics.user_growth_rate)}%
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <div className="bg-gray-50 rounded-lg p-6">
                <h4 className="text-md font-medium text-gray-800 mb-4">使用模式</h4>
                <div className="space-y-3">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">峰值时段</span>
                    <span className="text-sm font-medium">{analytics.peak_usage_hour || '未知'}</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">活跃天数</span>
                    <span className="text-sm font-medium">{analytics.active_days || 0}</span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-600">平均每日搜索</span>
                    <span className="text-sm font-medium">
                      {analytics.daily_average?.toFixed(1) || '0.0'}
                    </span>
                  </div>
                </div>
              </div>
            </div>

            {/* 每日趋势图表 */}
            <div>
              <h4 className="text-md font-medium text-gray-800 mb-4">每日搜索量趋势</h4>
              <div className="border border-gray-200 rounded-lg p-4">
                {analytics.daily_activity && analytics.daily_activity.length > 0 ? (
                  <div className="space-y-2">
                    {analytics.daily_activity.map((activity, index) => (
                      <div key={index} className="flex items-center space-x-4">
                        <span className="text-sm text-gray-600 w-24">{formatDate(activity.date)}</span>
                        <div className="flex-1 bg-gray-200 rounded-full h-4 relative">
                          <div
                            className="absolute left-0 top-0 h-full bg-blue-500 rounded-full"
                            style={{
                              width: `${Math.min((activity.searches / Math.max(...analytics.daily_activity.map(d => d.searches))) * 100, 100)}%`
                            }}
                          />
                        </div>
                        <span className="text-sm font-medium text-gray-900 w-12 text-right">{activity.searches}</span>
                      </div>
                    ))}
                  </div>
                ) : (
                  <div className="text-center py-8">
                    <BarChart3 className="w-12 h-12 mx-auto text-gray-400 mb-4" />
                    <p className="text-gray-500">暂无趋势数据</p>
                  </div>
                )}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  );
};

export default SearchAnalyticsDashboard;